<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="{$basePath}/css/admin.min.css" rel="stylesheet">

    <title>{ifset title}{include title|stripHtml} | {/ifset}Admin</title>
</head>

<body>
{if $user->isLoggedIn()}
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <div class="h-100 row justify-content-center align-items-center">
                    <h3>ADMIN</h3>
                </div>
            </div>
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link active" href=""><i class="fas fa-user"></i> Page 1</a></li>
                    <li class="nav-item"><a class="nav-link" href=""><i class="fas fa-list-alt"></i> Page 2</a></li>
                    <li class="nav-item"><a class="nav-link " href=""><i class="fas fa-address-book"></i> Page 3</a>
                    </li>
                    <li class="nav-item"><a class="nav-link " href=""><i class="fas fa-camera"></i> Page 4</a></li>
                    <li class="nav-item"><a class="nav-link " href=""><i class="fas fa-archway"></i> Page 5</a></li>
                    <li class="nav-item"><a class="nav-link " href=""><i class="fas fa-eye-slash"></i> Page 6</a></li>
                    <li class="nav-item"><a class="nav-link " href=""><i class="fas fa-bolt"></i> Page 7</a></li>
                </ul>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-dark">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </button>

                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{link Homepage:logout}">
                                Odhl√°sit <i class="fas fa-sign-out-alt"></i></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div id="content-in">
                {if count($flashes) > 0}
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div n:foreach="$flashes as $flash" n:class="alert, $flash->type">{$flash->message}</div>
                            </div>
                        </div>
                    </div>
                {/if}
                {include content}
            </div>
        </div>
    </div>
{else}
    {if count($flashes) > 0}
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div n:foreach="$flashes as $flash" n:class="alert, $flash->type">{$flash->message}</div>
                </div>
            </div>
        </div>
    {/if}
    {include content}
{/if}


<script src="{$basePath}/js/admin.min.js"></script>
{block scripts}{/block}
</body>
</html>
